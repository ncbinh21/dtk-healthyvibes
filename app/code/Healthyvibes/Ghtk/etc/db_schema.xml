<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order">
        <column xsi:type="decimal" name="insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="decimal" name="base_insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="varchar" name="tracking_label" length="255" nullable="true" comment="Tracking Label"/>
    </table>
    <table name="quote">
        <column xsi:type="decimal" name="insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="decimal" name="base_insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
    </table>
    <table name="quote_address">
        <column xsi:type="decimal" name="insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="decimal" name="base_insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
    </table>
    <table name="sales_invoice">
        <column xsi:type="decimal" name="insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="decimal" name="base_insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
    </table>
    <table name="sales_creditmemo">
        <column xsi:type="decimal" name="insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
        <column xsi:type="decimal" name="base_insurance" scale="4" precision="12" unsigned="false" nullable="false" default="0"/>
    </table>
</schema>
